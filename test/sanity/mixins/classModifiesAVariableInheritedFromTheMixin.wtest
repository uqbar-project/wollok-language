/**
  * Scenario: a class mixed with a mixin
  */
mixin Energy {
  var energy = 100
}

class Bird inherits Energy {
  method fly(meters) {
    energy -= meters
  }
  method energy() = energy
}

/**
  * Tests
  */
test "class modifies a variable inherited from the mixin" {
  const bird = new Bird()
  bird.fly(10)
  assert.equals(90, bird.energy())
}