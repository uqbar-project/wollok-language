/**
  * Scenario: a class with lazy definitions, changed by named parameters
  */
class A {
  var property a = c + b
  const property b = c + 1
  const property c = 2

  method m() = a + b + c
}

describe "lazy initialization on named objects" {

  test "first attribute" {
    assert.equals(8, new A(b = 2).m())
  }
}