/**
  * Scenario: a named object with several lazy definitions, interacting with named parameters
  */
object lazy {
  var property a = c + b
  const property b = c + 1
  const property c = 2

  method m() = a + b + c
}

describe "lazy initialization on named objects" {

  test "first attribute" {
    assert.equals(5, lazy.a())
  }

  test "second attribute" {
    assert.equals(3, lazy.b())
  }

  test "third attribute" {
    assert.equals(2, lazy.c())
  }

  test "sum of all attributes" {
    assert.equals(10, lazy.m())
  }

}
