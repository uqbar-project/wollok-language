/**
  * Tests
  */
describe "Assignments and fields" {

  test "Simple assignment" {
    const myObject = object {
      var a 
      method assignA(b) {
        a = b
      }

      method a() = a
    }

    myObject.assignA(5)
    assert.equals(5, myObject.a())
  }

}

describe "Multi op assign test case"{

  test "Plus equals" {
    var n = 1
    n += 1
    assert.equals(2, n) 
  }

  test "Multiply equals" {
    var n = 2
    n *= 3
    assert.equals(6, n) 
  }

  test "Substract equals" {
    var n = 2
    n -= 1
    assert.equals(1, n) 
  }

}

describe "Compound assignment" {

  test "+= operation" {
    const myObject = object {
      var a = 2
      method assignA(b) {
        a += b
      }

      method a() = a
    }

    myObject.assignA(5)
    assert.equals(7, myObject.a())
  }

  test "-= operation" {
    const myObject = object {
      var a = 2
      method assignA(b) {
        a -= b
      }
      method a() = a
    }

    myObject.assignA(5)
    assert.equals(-3, myObject.a())
  }

  test "*= operation" {
    const myObject = object {
      var a = 2
      method assignA(b) {
        a *= b
      }
      method a() = a
    }

    myObject.assignA(5)
    assert.equals(10, myObject.a())
  }

  test "/= operation" {
    const myObject = object {
      var a = 10
      method assignA(b) {
        a /= b
      }
      method a() = a
    }

    myObject.assignA(2)
    assert.equals(5, myObject.a())
  }

  test "%= operation" {
    const myObject = object {
      const c = 19
      var a = c
      method assignA(b) {
        a %= b
      }
      method a() = a
    }

    myObject.assignA(5)
    assert.equals(4, myObject.a())
  }

}